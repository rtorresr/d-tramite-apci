extends includes/base
block globals
    - var title= 'Text Inputs'
    - var body_id= 'page'
    - var body_class= "theme-teal"
    - var page = "Text Inputs"
    - var meta_descript = "Uso de Text Inputs en la aplicaci√≥n"

block mainmenu
    +mainmenu('Formularios','Text Inputs')

block content
  form
    .row
      .input-field.col.s6
        input#first_name.validate(placeholder="Placeholder" type="text")
        label.active(for="first_name") First Name
      .input-field.col.s6
        input#last_name(type="text")
        label(for="last_name") Last Name
    .row
      .input-field.col.s12
        input#disabled.validate(disabled="" value="I am not editable" type="text")
        label.active(for="disabled") Disabled
    .row
      .input-field.col.s12
        input#password.validate(type="password")
        label(for="password") Password
    .row
      .input-field.col.s12
        select
          option(value="" disabled="" selected="") Choose your option
          option(value="1") Option 1
          option(value="2") Option 2
          option(value="3") Option 3
        label Materialize Select
    .row
      .input-field.col.s12
        input#email.validate(type="email")
        label(for="email") Email
        span.helper-text(data-error="wrong" data-success="right") Helper text
    .row
      .col.s12
        | This is an inline input field:
        .input-field.inline
          input#email_inline.validate(type="email")
          label(for="email_inline") Email
          span.helper-text(data-error="wrong" data-success="right")

block append scripts
    script.
      const $ = require('jquery');

      $(document).ready(function(){
        $('select').formSelect();
      });